{
  "name": "@toke/tauri",
  "version": "0.42.4",
  "private": true,
  "description": "Tauri desktop application for Toke",
  "scripts": {
    "build": "tauri build",
    "build:debug": "tauri build --debug",
    "build:release": "tauri build --release",
    "build:universal": "tauri build --universal-dmg",
    "bundle": "tauri build --bundles all",
    "bundle:mac": "tauri build --bundles app,dmg",
    "bundle:windows": "tauri build --bundles msi,nsis",
    "bundle:linux": "tauri build --bundles appimage,deb",
    "dev": "tauri dev",
    "dev:release": "tauri dev --release",
    "preview": "tauri preview",
    "test": "cargo test",
    "test:unit": "cargo test --lib",
    "test:integration": "cargo test --test '*'",
    "lint": "cargo clippy -- -D warnings",
    "format": "cargo fmt",
    "check": "cargo check",
    "clean": "rm -rf dist target src-tauri/target",
    "icon": "tauri icon",
    "info": "tauri info"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0"
  }
}